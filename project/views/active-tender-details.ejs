<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>active-tender-details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <% var activePage = 'active-tenders'; %> 
    <%- include('partials/navbar', { activePage: activePage }) %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 p-4">


                <a href="/active-tenders" class="btn btn-primary">Back</a>
                <h3></h3>

                <!-- <% if (tender.userId === userId) { %>
                    <h3 class="text-muted">Selected Tender (Your):</h3>
                <% } else { %> -->
                    <h3 class="text-muted">Selected Tender:</h3>
                <!-- <% } %> -->
                

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                            <th scope="col"></th>
                            <th scope="col">Title</th>
                            <th scope="col">Institution Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Opened</th>
                            <th scope="col">Deadline</th>
                            
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row"><%= tender.id %></th>
                                <td><%= tender.title %></td>
                                <td><%= tender.description %></td>
                                <td><%= tender.institutionName %></td>
                                <td><%= tender.startDate %></td>
                                <td><%= tender.endDate %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>    
               
                <a href="/create-bid/<%= tender.id %>" class="btn btn-primary">Submit a Bid</a>                

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>