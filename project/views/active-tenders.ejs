                <a href="/" class="btn btn-primary">Home</a>
                <h3></h3>

                <div class="table-responsive">
                    <% if (tenders.length === 0) { %>
                        <h3 class="text-muted">No active tenders available</h3>
                    <% } else { %>
                        <h3 class="text-muted">Active Tenders</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                <th scope="col"></th>
                                <th scope="col">Title</th>
                                <th scope="col">Opened</th>
                                <th scope="col">Deadline</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tenders.forEach(tender => { %>
                                    <tr>
                                        <th scope="row"><%= tender.id %></th>
                                        <td><a href="/active-tenders/<%= tender.id %>"><%= tender.title %></a></td>
                                        <td><%= tender.startDate %></td>
                                        <td><%= tender.endDate %></td>
