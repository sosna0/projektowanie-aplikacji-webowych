<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>closed-tenders</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <% var activePage = 'closed-tenders'; %> 
    <%- include('partials/navbar', { activePage: activePage }) %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 p-4">

                <a href="/" class="btn btn-primary">Home</a>
                <h3></h3>

                <div class="table-responsive">
                    <% if (tenders.length === 0) { %>
                        <h3 class="text-muted">No closed Tenders available yet</h3>
                    <% } else { %>
                        <h3 class="text-muted">Closed Tenders</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title</th>
                                <th scope="col">Start Date</th>
                                <th scope="col">Deadline</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tenders.forEach((tender, index) => { %>
                                    <tr>
                                        <th scope="row"><%= index + 1 %></th>
                                        <td><a href="/closed-tenders/<%= tender.id %>"><%= tender.title %></a></td>
                                        <td>-Tender Closed-</td>
                                        <td>-Tender Closed-</td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } %>
                </div>    
               


            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
